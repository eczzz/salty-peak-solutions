---
// Reusable Button Component for Salty Peak Solutions
// Props interface
interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'small' | 'medium' | 'large';
  href?: string;
  icon?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'medium',
  href,
  icon = false,
  class: className = '',
} = Astro.props;

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  class={`btn btn-${variant} btn-${size} ${icon ? 'btn-with-icon' : ''} ${className}`}
>
  {icon && (
    <span class="btn-icon">
      <svg width="15" height="10" viewBox="0 0 15 10" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10.8263 9.5L13.9242 6.5L10.8263 3.5" fill="#030726"/>
        <path d="M10.8263 9.5L13.9242 6.5L10.8263 3.5" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M0.5 0.5V2.5C0.5 3.56087 0.935178 4.57828 1.7098 5.32843C2.48442 6.07857 3.53504 6.5 4.63052 6.5H13.9242" fill="#030726"/>
        <path d="M0.5 0.5V2.5C0.5 3.56087 0.935178 4.57828 1.7098 5.32843C2.48442 6.07857 3.53504 6.5 4.63052 6.5H13.9242" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </span>
  )}
  <span class="btn-text">
    <slot />
  </span>
</Element>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: var(--border-radius-md);
    font-family: 'Helvetica', 'Arial', sans-serif;
    font-weight: 700;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  /* Variants */
  .btn-primary {
    background: #CC5700;
    color: var(--text-white);
    border: 1px solid #CC5700;
    box-shadow: 0 4px 15px rgba(204, 87, 0, 0.3);
  }

  .btn-primary:hover {
    background: var(--primary-gold, #F4B94B);
    border-color: var(--primary-gold, #F4B94B);
    transform: scale(1.05);
    box-shadow: 0 0 25px rgba(244, 185, 75, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-white);
    border: 1px solid var(--primary-gold);
  }

  .btn-secondary:hover {
    background: var(--primary-orange);
    border-color: var(--primary-orange);
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(232, 131, 58, 0.4);
  }

  .btn-outline {
    background: transparent;
    color: var(--text-white);
    border: 1px solid var(--text-white);
  }

  .btn-outline:hover {
    background: var(--text-white);
    color: var(--bg-dark);
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  /* Sizes */
  .btn-small {
    height: 32px;
    padding: 8px 20px;
    font-size: 12px;
  }

  .btn-medium {
    height: 40px;
    padding: 11px 33px;
    font-size: 14px;
  }

  .btn-large {
    height: 48px;
    padding: 14px 40px;
    font-size: 16px;
  }

  /* Button with icon */
  .btn-with-icon {
    padding-left: 11px;
  }

  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    background: #030726;
    border-radius: 50%;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .btn:hover .btn-icon {
    background: var(--primary-orange, #CC5700);
    box-shadow: 0 0 15px rgba(232, 131, 58, 0.5);
  }

  .btn-icon svg {
    width: 15px;
    height: 10px;
  }

  .btn-text {
    display: flex;
    align-items: center;
  }
</style>
