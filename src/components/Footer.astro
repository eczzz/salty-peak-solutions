<style>
	/* ========================================
	   Footer Section
	   ======================================== */
	.footer-section {
		background: var(--bg-dark);
		padding: 100px 60px 60px;
	}

	.footer-container {
		max-width: 1440px;
		margin: 0 auto;
		padding: 80px 120px 60px;
		position: relative;
		min-height: 670px;
		/* Orange as base background */
		background-image: url("data:image/svg+xml,%3Csvg width='1440' height='468' viewBox='0 0 1440 468' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1440 50.0143C1440 18.8266 1411.76 -4.75015 1381.07 0.817559L41.0739 243.944C17.2909 248.259 0 268.969 0 293.14V417.619C0 445.233 22.3857 467.619 50 467.619H1390C1417.61 467.619 1440 445.233 1440 417.619V50.0143Z' fill='%23CC5700'/%3E%3C/svg%3E%0A");
		background-repeat: no-repeat;
		background-position: center top;
		background-size: 100% auto;
	}

	/* Blue shape on top */
	.footer-container::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("data:image/svg+xml,%3Csvg width='1440' height='665' viewBox='0 0 1440 665' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 50.0057C0 20.2576 25.8165 -2.91039 55.3912 0.297154L1395.39 145.628C1420.77 148.38 1440 169.809 1440 195.336V614.29C1440 641.904 1417.61 664.29 1390 664.29H50C22.3857 664.29 0 641.904 0 614.29V50.0057Z' fill='%23030726'/%3E%3C/svg%3E%0A");
		background-repeat: no-repeat;
		background-position: center top;
		background-size: 100% 100%;
		z-index: 1;
	}

	/* Footer Content Grid */
	.footer-content {
		position: relative;
		z-index: 2;
		display: grid;
		grid-template-columns: 1fr 1fr 1.5fr;
		gap: 100px;
		margin-bottom: 60px;
	}

	/* ========================================
	   Left Column - Logo & Contact
	   ======================================== */
	.footer-left {
		display: flex;
		flex-direction: column;
	}

	.footer-logo {
		margin-bottom: 32px;
	}

	.footer-logo img {
		width: 150px;
		height: auto;
	}

	.footer-tagline {
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 400;
		line-height: 24px;
		color: #D8D8D8;
		max-width: 400px;
		margin: 0 0 32px 0;
	}

	.contact-info-list {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 12px;
		font-family: 'Roboto', sans-serif;
		font-size: 16px;
		font-weight: 400;
		line-height: 18.4px;
		color: #D8D8D8;
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.contact-item:hover {
		color: var(--primary-orange);
	}

	.contact-item svg {
		flex-shrink: 0;
	}

	.contact-item span {
		word-break: break-word;
	}

	/* ========================================
	   Center Column - Quick Links
	   ======================================== */
	.footer-center {
		display: flex;
		flex-direction: column;
		padding-top: 180px;
	}

	.footer-section-heading {
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 500;
		line-height: 18.4px;
		color: #FFFFFF;
		text-transform: uppercase;
		margin: 0 0 24px 0;
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 24px;
	}

	.footer-nav-link {
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 500;
		line-height: 18.4px;
		color: #FFFFFF;
		text-transform: uppercase;
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-nav-link:hover {
		color: var(--primary-orange);
	}

	/* ========================================
	   Right Column - Newsletter
	   ======================================== */
	.footer-right {
		display: flex;
		flex-direction: column;
		padding-top: 180px;
	}

	.newsletter-heading {
		font-family: 'Quicksand', sans-serif;
		font-size: 20px;
		font-weight: 500;
		line-height: 24px;
		color: #FFFFFF;
		text-transform: uppercase;
		margin: 0 0 32px 0;
	}

	.newsletter-form {
		margin-bottom: 40px;
	}

	.input-wrapper {
		position: relative;
		max-width: 400px;
	}

	.newsletter-input {
		width: 100%;
		height: 40px;
		background: transparent;
		border: none;
		border-bottom: 1px solid #FFFFFF;
		padding: 12px 50px 12px 0;
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 400;
		line-height: 20px;
		color: #FFFFFF;
		text-transform: uppercase;
		outline: none;
		transition: border-color var(--transition-fast);
	}

	.newsletter-input::placeholder {
		color: rgba(255, 255, 255, 0.7);
	}

	.newsletter-input:focus {
		border-bottom-color: var(--primary-orange);
	}

	.newsletter-submit {
		position: absolute;
		right: 0;
		bottom: 5px;
		background: transparent;
		border: none;
		cursor: pointer;
		color: #FFFFFF;
		transition: color var(--transition-fast);
		padding: 5px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.newsletter-submit:hover {
		color: var(--primary-orange);
	}

	/* Social Icons */
	.social-icons {
		display: flex;
		gap: 20px;
		align-items: center;
	}

	.social-icon {
		width: 40px;
		height: 40px;
		border: 1px solid #FFFFFF;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: transparent;
		text-decoration: none;
		transition: all var(--transition-fast);
	}

	.social-icon:hover {
		background: var(--primary-orange);
		border-color: var(--primary-orange);
	}

	/* ========================================
	   Footer Bottom
	   ======================================== */
	.footer-divider {
		width: 100%;
		height: 1px;
		background: #FFFFFF;
		margin: 0 0 40px 0;
		position: relative;
		z-index: 2;
	}

	.footer-copyright {
		font-family: 'Roboto', sans-serif;
		font-size: 18px;
		font-weight: 400;
		line-height: 27px;
		color: #FFFFFF;
		text-align: center;
		margin: 0;
		position: relative;
		z-index: 2;
	}

	/* ========================================
	   Responsive Styles
	   ======================================== */
	@media (max-width: 1400px) {
		.footer-section {
			padding: 80px 40px 50px;
		}

		.footer-container {
			padding: 60px 80px 50px;
		}

		.footer-content {
			gap: 60px;
		}

		.footer-center,
		.footer-right {
			padding-top: 150px;
		}
	}

	@media (max-width: 1200px) {
		.footer-section {
			padding: 70px 40px 50px;
		}

		.footer-container {
			padding: 50px 60px 40px;
			min-height: auto;
			border-radius: 40px;
			/* Replace SVG backgrounds with solid colors on tablet */
			background-image: none;
			background: linear-gradient(to bottom, #030726 78%, #CC5700 78%);
		}

		.footer-container::before {
			display: none;
		}

		.footer-content {
			gap: 40px;
		}

		.footer-center,
		.footer-right {
			padding-top: 0;
		}

		.footer-tagline {
			max-width: 350px;
		}

		.newsletter-heading {
			font-size: 18px;
			line-height: 22px;
		}
	}

	@media (max-width: 1024px) {
		.footer-section {
			padding: 60px 40px;
		}

		.footer-container {
			padding: 50px 40px 40px;
			background: linear-gradient(to bottom, #030726 82%, #CC5700 82%);
		}

		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: 40px;
		}

		.footer-left {
			grid-column: 1 / -1;
			max-width: 100%;
		}

		.footer-tagline {
			max-width: 100%;
		}

		.newsletter-form {
			margin-bottom: 32px;
		}

		.input-wrapper {
			max-width: 100%;
		}
	}

	@media (max-width: 850px) {
		.footer-section {
			padding: 50px 32px;
		}

		.footer-container {
			padding: 40px 32px;
			border-radius: 30px;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 36px;
		}

		.footer-center,
		.footer-right {
			padding-top: 0;
		}

		.footer-tagline {
			font-size: 15px;
			line-height: 22px;
		}

		.contact-item {
			font-size: 15px;
		}
	}

	@media (max-width: 768px) {
		.footer-section {
			padding: 50px 24px;
		}

		.footer-container {
			padding: 36px 24px;
			border-radius: 24px;
			background: linear-gradient(to bottom, #030726 83%, #CC5700 83%);
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 32px;
		}

		.footer-left,
		.footer-center,
		.footer-right {
			text-align: left;
			padding-top: 0;
		}

		.footer-logo {
			margin-bottom: 20px;
		}

		.footer-logo img {
			width: 120px;
		}

		.footer-tagline {
			font-size: 15px;
			line-height: 22px;
			margin-bottom: 20px;
		}

		.contact-info-list {
			gap: 14px;
		}

		.contact-item {
			font-size: 14px;
			line-height: 18px;
		}

		.footer-section-heading {
			font-size: 14px;
			margin-bottom: 18px;
		}

		.footer-nav {
			gap: 16px;
		}

		.footer-nav-link {
			font-size: 14px;
		}

		.newsletter-heading {
			font-size: 16px;
			line-height: 20px;
			margin-bottom: 20px;
		}

		.newsletter-form {
			margin-bottom: 28px;
		}

		.newsletter-input {
			font-size: 14px;
			height: 36px;
		}

		.social-icons {
			justify-content: flex-start;
			gap: 14px;
		}

		.social-icon {
			width: 36px;
			height: 36px;
		}

		.social-icon svg {
			width: 15px;
			height: 15px;
