---
import Button from './Button.astro';
---

<!-- Hero Section -->
<main class="hero-section">
	<div class="hero-container">
		<!-- Left Column - Content -->
		<div class="hero-content">
			<h1 class="hero-heading">
				Protecting First<br class="heading-break" />
				Responders<br class="heading-break" />
				<span class="highlight">Across the</span>
			</h1>
			<div class="last-line-wrapper">
				<span class="hero-heading highlight">West</span>
				<Button variant="primary" icon={true} href="#solutions">
					Explore Solutions
				</Button>
			</div>

			<p class="hero-description">
				We provide complete clean air solutions to fire departments and EMS agencies. MagneGrip exhaust removal systems eliminate 100% of cancer-causing diesel exhaust, protecting the heroes who protect us.
			</p>

			<a href="#quote" class="quote-link">
				Get A Quote
				<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</a>
		</div>

		<!-- Right Column - Image + Stats Card -->
		<div class="hero-visual">
			<div class="hero-image-wrapper">
				<img
					src="/salty-peaks-solutions-hero.webp"
					alt="Fire truck with MagneGrip exhaust system"
					class="hero-image"
				/>
			</div>

			<!-- Stats Card - Outside image wrapper so it flows naturally -->
			<div class="stats-card">
				<div class="stat-item">
					<div class="stat-number">11</div>
					<div class="stat-label">STATES COVERED</div>
				</div>
				<div class="stat-item">
					<div class="stat-number">100%</div>
					<div class="stat-label">EXHAUST CAPTURE</div>
				</div>
				<div class="stat-item">
					<div class="stat-number">#1</div>
					<div class="stat-label">RATED SOLUTION</div>
				</div>
			</div>
		</div>
	</div>
</main>

<style>
	/* Hero Section */
	.hero-section {
		min-height: 100vh;
		background: linear-gradient(180deg, var(--bg-gradient-start) 0%, var(--bg-dark) 100%);
		padding: 184px 60px 60px;
		display: flex;
		align-items: center;
	}

	.hero-container {
		max-width: 1420px;
		width: 100%;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 80px;
		align-items: center;
	}

	/* Left Column - Content */
	.hero-content {
		max-width: 538px;
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.hero-heading {
		font-family: 'Quicksand', sans-serif;
		font-style: normal;
		font-size: clamp(32px, 5vw, 75px);
		font-weight: 400;
		line-height: 1.05;
		color: #FFFFFF;
		margin: 0;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 0.2s forwards;
	}

	.last-line-wrapper {
		display: flex;
		align-items: center;
		gap: 24px;
		margin-bottom: 20px;
	}

	.last-line-wrapper .hero-heading {
		margin: 0;
		white-space: nowrap;
	}

	.last-line-wrapper :global(.btn) {
		margin-top: 8px;
	}

	.hero-heading.highlight,
	.hero-heading .highlight {
		background: linear-gradient(90deg, #F4B94B 0%, #E8833A 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-description {
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 500;
		line-height: 24px;
		color: var(--text-gray);
		max-width: 494px;
		margin-top: 40px;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 0.4s forwards;
	}

	.quote-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		font-weight: 500;
		line-height: 20px;
		color: var(--text-white);
		text-decoration: underline;
		margin-top: 27px;
		transition: all var(--transition-fast);
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 0.6s forwards;
	}

	.quote-link:hover {
		color: var(--primary-orange);
		text-shadow: 0 0 15px rgba(232, 131, 58, 0.5);
	}

	.quote-link svg {
		transition: transform var(--transition-fast);
	}

	.quote-link:hover svg {
		transform: translateX(4px);
	}

	/* Right Column - Visual */
	.hero-visual {
		position: relative;
		opacity: 0;
		animation: fadeInRight 1s ease-out 0.3s forwards;
	}

	.hero-image-wrapper {
		position: relative;
		width: 100%;
		max-width: 496px;
		aspect-ratio: 1;
		background: var(--bg-dark);
		border-radius: var(--border-radius-lg);
		padding: 8px;
		box-shadow: 6px 4px 76.3px -6px rgba(0, 0, 0, 0.02);
		transition: transform 0.4s ease;
		margin-left: auto;
		z-index: 2;
	}

	.hero-image-wrapper:hover {
		transform: translateY(-8px);
	}

	.hero-image-wrapper::before {
		content: '';
		position: absolute;
		top: 2rem;
		left: 2rem;
		width: 100%;
		height: 100%;
		border: 2px solid var(--primary-orange);
		border-radius: var(--border-radius-lg);
		z-index: 0;
		transition: all 0.4s ease;
	}

	.hero-image-wrapper:hover::before {
		box-shadow: 0 0 30px rgba(232, 131, 58, 0.4);
		border-color: var(--primary-gold);
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: var(--border-radius-md);
		position: relative;
		z-index: 2;
		transition: transform 0.6s ease;
	}

	.hero-image-wrapper:hover .hero-image {
		transform: scale(1.05);
	}

	/* Stats Card - behind the image, peeking out left */
	.stats-card {
		position: absolute;
		bottom: 24px;
		left: -120px;
		width: 347px;
		background: #030726;
		border-radius: var(--border-radius-lg);
		padding: 32px 32px 48px 32px;
		box-shadow: 6px 4px 76.3px -6px rgba(0, 0, 0, 0.02);
		display: flex;
		flex-direction: column;
		gap: 24px;
		z-index: 1;
	}

	.stat-item {
		display: flex;
		flex-direction: column;
		gap: 8px;
		padding: 12px;
		border-radius: 12px;
		transition: all 0.3s ease;
		cursor: default;
	}

	.stat-item:hover {
		background: rgba(232, 131, 58, 0.08);
		transform: translateX(8px);
	}

	.stat-number {
		font-family: 'Quicksand', sans-serif;
		font-size: 30px;
		font-weight: 600;
		line-height: 38px;
		color: var(--primary-gold);
		transition: all 0.3s ease;
	}

	.stat-item:hover .stat-number {
		color: var(--primary-orange);
		text-shadow: 0 0 20px rgba(232, 131, 58, 0.5);
	}

	.stat-label {
		font-family: 'Quicksand', sans-serif;
		font-size: 18px;
		font-weight: 400;
		line-height: 22px;
		color: var(--text-gray);
	}

	/* Animations */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	/* =============================================
	   Responsive Styles
	   ============================================= */

	@media (max-width: 1400px) {
		.hero-section {
			padding: 160px 50px 60px;
		}

		.hero-container {
			gap: 60px;
		}

		.stats-card {
			width: 300px;
			padding: 28px 24px 40px;
		}

		.stat-number {
			font-size: 26px;
			line-height: 34px;
		}

		.stat-label {
			font-size: 16px;
			line-height: 20px;
		}
	}

	@media (max-width: 1200px) {
		.hero-section {
			padding: 150px 40px 60px;
		}

		.hero-container {
			gap: 50px;
		}

		.hero-image-wrapper {
			max-width: 420px;
		}

		/* Move stats card below the image */
		.stats-card {
			position: static;
			width: 100%;
			max-width: 420px;
			margin-top: 24px;
			padding: 24px;
			flex-direction: row;
			flex-wrap: nowrap;
			justify-content: space-between;
		}

		.stat-item {
			flex: 1;
			text-align: center;
			align-items: center;
		}

		.stat-item:hover {
			transform: translateY(-4px);
		}

		.stat-number {
			font-size: 24px;
			line-height: 32px;
		}

		.stat-label {
			font-size: 14px;
			line-height: 18px;
		}

		.last-line-wrapper {
			gap: 16px;
		}

		.last-line-wrapper :global(.btn) {
			padding: 10px 24px;
			font-size: 13px;
		}
	}

	@media (max-width: 1024px) {
		.hero-section {
			padding: 160px 40px 60px;
		}

		.hero-container {
			grid-template-columns: 1fr;
			gap: 50px;
			justify-items: center;
		}

		.hero-content {
			max-width: 600px;
			text-align: center;
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		.heading-break {
			display: none;
		}

		.last-line-wrapper {
			flex-direction: column;
			gap: 20px;
		}

		.last-line-wrapper :global(.btn) {
			margin-top: 0;
			padding: 11px 33px;
			font-size: 14px;
		}

		.hero-visual {
			width: 100%;
			max-width: 496px;
		}

		.hero-image-wrapper {
			max-width: 100%;
			margin-left: 0;
		}

		.hero-image-wrapper::before {
			top: 1.5rem;
			left: 1.5rem;
		}

		.stats-card {
			max-width: 100%;
		}

		.stat-number {
			font-size: 26px;
			line-height: 34px;
		}

		.stat-label {
			font-size: 15px;
			line-height: 20px;
		}
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 150px 24px 40px;
			min-height: auto;
		}

		.hero-container {
			gap: 40px;
		}

		.hero-description {
			font-size: 15px;
			line-height: 22px;
			margin-top: 30px;
		}

		.quote-link {
			margin-top: 20px;
		}

		.last-line-wrapper {
			margin-bottom: 0;
		}

		.hero-image-wrapper {
			padding: 6px;
		}

		.hero-image-wrapper::before {
			top: 0.75rem;
			left: 0.75rem;
		}

		.stats-card {
			padding: 20px;
			gap: 12px;
			margin-top: 20px;
		}

		.stat-number {
			font-size: 22px;
			line-height: 28px;
		}

		.stat-label {
			font-size: 11px;
			line-height: 15px;
		}
	}

	@media (max-width: 480px) {
		.hero-section {
			padding: 120px 16px 32px;
		}

		.hero-container {
			gap: 32px;
		}

		.hero-content {
			max-width: 100%;
		}

		.last-line-wrapper {
			gap: 16px;
		}

		.last-line-wrapper :global(.btn) {
			padding: 10px 24px;
			font-size: 13px;
		}

		.hero-description {
			font-size: 14px;
			line-height: 20px;
			margin-top: 24px;
		}

		.quote-link {
			font-size: 14px;
			margin-top: 16px;
		}

		.hero-image-wrapper {
			padding: 4px;
		}

		.hero-image-wrapper::before {
			top: 0.5rem;
			left: 0.5rem;
		}

		.stats-card {
			padding: 16px 12px;
			border-radius: 16px;
			gap: 8px;
			margin-top: 16px;
		}

		.stat-item {
			padding: 6px 4px;
		}

		.stat-number {
			font-size: 18px;
			line-height: 24px;
		}

		.stat-label {
			font-size: 10px;
			line-height: 14px;
		}
	}
</style>
